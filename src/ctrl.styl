  animation-delay(-.1s)
.ld.f02
  animation-delay(-.2s)
.ld.f03
  animation-delay(-.3s)
.ld.f04
  animation-delay(-.4s)
.ld.f05
  animation-delay(-.5s)
.ld.f06
  animation-delay(-.6s)
.ld.f07
  animation-delay(-.7s)
.ld.f08
  animation-delay(-.8s)
.ld.f09
