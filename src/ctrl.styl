.ld.reverse
  animation-direction(reverse)

.ld.xhalf
  animation-duration(.5s)
.ld.x1
  animation-duration(1s)
.ld.x2
  animation-duration(2s)
.ld.x4
  animation-duration(4s)

.ld.running
  animation-play-state(running)
.ld.paused
  animation-play-state(paused)

