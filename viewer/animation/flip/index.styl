rate = 0.5
deg = 1800deg

//- flip both
x1 = 1
x2 = 0
x3 = 0
x4 = 1

y1 = 1
y2 = 1
y3 = 0
y4 = 0

//- flip single
x1 = 0
x2 = 1
x3 = 0
x4 = 1

y1 = 0
y2 = 0
y3 = 0
y4 = 0

@keyframes flip
  0%, 25%, 50%, 75%, 100%
    animation-timing-function: cubic-bezier(0,rate,1 - rate,1)
  0%
    transform: rotateX(deg * x1) rotateY(deg * y1)
  25%
    transform: rotateX(deg * x2) rotateY(deg * y2)
  50%
    transform: rotateX(deg * x3) rotateY(deg * y3)
  75%
    transform: rotateX(deg * x4) rotateY(deg * y4)
  100%
    transform: rotateX(deg * x1) rotateY(deg * y1)


