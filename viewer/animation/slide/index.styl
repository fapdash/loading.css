unit = 2px
rate2 = .5
@keyframes slide
  0%, 100%
    animation-timing-function: cubic-bezier(rate2,0,1,1 - rate2)
  50%
    animation-timing-function: cubic-bezier(0,rate2,1 - rate2,1)
  0%
    transform: translate(0,0)
  49.9%
    transform: translate(100 * unit,0)
  50%
    transform: translate(-100 * unit,0)
  100%
    transform: translate(0,0)

